{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "allowJs": true,     
    "checkJs": true ,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"] }  
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
